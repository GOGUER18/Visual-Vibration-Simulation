   # Clear screen
    screen.fill(WHITE)

    # Draw vibrating circle
    pygame.draw.circle(screen, RED, (int(base_x + offset_x), int(base_y + offset_y)), circle_radius)

    # Update display
    pygame.display.flip()

    # Control frame rate
    clock.tick(60)  # 60 FPS

# Quit Pygame
pygame.quit()
sys.exit()
